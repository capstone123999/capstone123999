<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/manager_button3"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:textSize="25sp"
            android:drawableStart="@drawable/megaicon"
            android:padding="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/border_bold"
            android:backgroundTint="#FFE070"
            android:text="일반신고 " />

        <Button
            android:id="@+id/manager_button1"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            android:drawableStart="@drawable/infoicon"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/border_bold"
            android:backgroundTint="#FFE070"
            android:text="보금자리 등록 정보" />
        <Button
            android:id="@+id/manager_button2"
            android:layout_marginTop="50dp"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/houseicon"
            android:padding="15dp"
            android:textColor="@color/black"
            android:background="@drawable/border_bold"
            android:backgroundTint="#FFE070"
            android:text="보금자리 매칭 결과" />

    </LinearLayout>
    <Button
        android:id="@+id/logoutManagerButton"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="로그아웃" />

</LinearLayout>
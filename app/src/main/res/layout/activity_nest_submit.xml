<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".SubmitNest">


    <TextView
        android:id="@+id/submitNest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="보금자리 등록"
        android:textAlignment="center"
        android:textSize="35dp"/>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/submitNestAddress"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:hint="주소 검색을 눌러주세요"
            android:textAlignment="center" />

        <Button
            android:id="@+id/submitNestAddressSearch"
            android:background="@drawable/border_button"
            android:backgroundTint="#80D9FB"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="검색"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="4dp">

        <EditText
            android:id="@+id/submitNestAddressMore"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:hint="상세 주소를 입력해주세요" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:padding="7dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여 기간"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/rentPeriod"
            android:layout_width="245dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:contentDescription="대여 기간 선택"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:padding="7dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실평수"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/roomSize"
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="33dp"
            android:background="@drawable/border"
            android:hint="평수를 숫자로만 입력해주세요"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="left"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="준비된 서비스"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp">

            <CheckBox
                android:textColor="@color/black"
                android:id="@+id/serviceCheckbox1"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="에어컨" />

            <CheckBox
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/serviceCheckbox2"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:text="Wi-Fi" />

            <CheckBox
                android:id="@+id/serviceCheckbox3"
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:text="샤워 시설" />

            <CheckBox
                android:id="@+id/serviceCheckbox4"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="침구"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락 가능 시간대"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:gravity="left">

            <Spinner
                android:id="@+id/callTime1"
                android:layout_width="110dp"
                android:layout_height="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="연락 가능 시간대 시작 시간 선택" />

            <TextView
                android:id="@+id/textView10"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="시"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:id="@+id/textView9"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="ㅡ"
                android:gravity="center"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/callTime2"
                android:layout_width="110dp"
                android:layout_height="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="연락 가능 시간대 끝 시간 선택" />

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="시"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"/>


        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/submitNestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="#80D9FB"
        android:text="OK" />




</LinearLayout>
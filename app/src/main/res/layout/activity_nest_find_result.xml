<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".FindNest">

    <TextView
        android:id="@+id/findSuccess"
        android:gravity="center"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="보금자리 배치 시작"
        android:textSize="45dp"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:id="@+id/findSuccessImage"
        android:layout_width="203dp"
        android:layout_height="223dp"
        app:srcCompat="@drawable/nest" />

    <Button
        android:id="@+id/findSuccessButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="@drawable/border_bold"
        android:backgroundTint="#FFE070"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="시작하기" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".FindNest">

    <TextView
        android:id="@+id/findSuccess"
        android:gravity="center"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="배치 완료"
        android:textSize="45dp"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:id="@+id/findSuccessImage"
        android:layout_width="203dp"
        android:layout_height="223dp"
        app:srcCompat="@drawable/nest" />

    <TextView
        android:id="@+id/findSuccessText"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:text="가까운 파출소를 찾았습니다"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="28dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/findSuccessButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="#80D9FB"
        android:text="OK" />
</LinearLayout>
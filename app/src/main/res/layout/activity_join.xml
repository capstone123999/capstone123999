<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".SubmitNest">

    <TextView
        android:id="@+id/joinext"
        android:layout_marginBottom="30dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35dp"/>


    <LinearLayout
        android:layout_width="370dp"
        android:padding="5dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="이름"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/name"
            android:background="@drawable/border"
            android:layout_marginLeft="15dp"
            android:layout_width="105dp"
            android:layout_gravity="center"
            android:layout_height="33dp"
            android:hint="성명"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/genderText"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="성별"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/genderChoice"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_border_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="370dp"
        android:layout_height="96dp"
        android:padding="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/residentNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주민등록번호"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/num1"
                android:layout_width="135dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/border"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:hint="앞번호"
                android:textAlignment="center" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅡ"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/num2"
                android:layout_width="135dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:layout_height="35dp"
                android:hint="뒷번호"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="7dp">

            <EditText
                android:id="@+id/number"
                android:layout_width="230dp"
                android:background="@drawable/border"
                android:layout_height="35dp"
                android:layout_marginLeft="1dp"
                android:layout_gravity="center"
                android:hint="전화번호를 입력해주세요"
                android:textAlignment="center" />
            <Button
                android:id="@+id/numberButton"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/border_button"
                android:backgroundTint="#80D9FB"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="인증" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="370dp"
        android:padding="7dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/joinIdText"
            android:layout_marginLeft="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="ID"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/joinId"
            android:background="@drawable/border"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:hint="아이디를 입력해주세요"
            android:layout_gravity="center"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="370dp"
        android:padding="7dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/joinPwText"
            android:layout_marginLeft="15dp"
            android:layout_width="35dp"
            android:gravity="center"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="PW"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/joinPw"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:hint="비밀번호를 입력해주세요"
            android:textAlignment="center" />

    </LinearLayout>


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/joinRegisterButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#80D9FB"
        android:textSize="25dp"
        android:layout_marginBottom="50dp"
        android:text="OK" />

</LinearLayout>